<h1><%= @course.name %></h1>
<%= form_with(model: [@course, @tutor], url: course_tutors_path(@course), method: :post) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :experience %>
    <%= form.text_field :experience %>
  </div>

  <div>
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>
<% end %>

